  <script>
    const qs = new URLSearchParams(location.search);
    const from = qs.get("from") || "Io";
    const to = qs.get("to") || "";
    const customMsg = qs.get("msg") || "";

    document.getElementById("title").textContent =
      to ? `${to}, vuoi essere il mio Valentine? üíò` : "Vuoi essere il mio Valentine? üíò";

    document.getElementById("msg").textContent =
      customMsg || `Da: ${from} üíñ`;

    const noBtn = document.getElementById("no");
    const yesBtn = document.getElementById("yes");
    const final = document.getElementById("final");

    const texts = [
      "No üôà",
      "Aspetta üò≥",
      "Ma dai üòÖ",
      "Non vale üò≠",
      "Ok basta üò©"
    ];

    let count = 0;

    noBtn.addEventListener("mouseenter", () => {
      count++;

      const x = Math.random() * 240 - 120;
      const y = Math.random() * 80 - 40;

      noBtn.style.transform = `translate(${x}px, ${y}px)`;
      noBtn.textContent = texts[Math.min(count, texts.length - 1)];

      if (count > 6) {
        noBtn.style.display = "none";
        final.textContent = "Il 'No' si √® arreso. Scegli il S√¨ üòåüíò";
      }
    });

    yesBtn.addEventListener("click", () => {
      final.textContent = "YEEEES üíûü•∞ Ci vediamo presto!";
      document.querySelector(".btns").style.display = "none";
    });
  </script>
